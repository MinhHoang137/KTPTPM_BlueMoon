<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.statistics.StatisticsDashboardController"
           prefWidth="1000" prefHeight="700"
           style="-fx-background-color: #f9f9f9;">
    <VBox spacing="20" alignment="CENTER">
        <Label text="Thống kê" style="-fx-font-size: 24px; -fx-text-fill: #333333;"/>
        <HBox spacing="50" alignment="CENTER">
            <Button text="Thống kê nhân khẩu" fx:id="demoBtn" prefWidth="200" prefHeight="50"
                    onAction="#openDemographics"
                    style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-size: 16px;"/>
            <Button text="Nhân khẩu theo phường" fx:id="popBtn" prefWidth="200" prefHeight="50"
                    onAction="#openPopulationByWard"
                    style="-fx-background-color: #3F51B5; -fx-text-fill: white; -fx-font-size: 16px;"/>
        </HBox>
    </VBox>
</StackPane>
