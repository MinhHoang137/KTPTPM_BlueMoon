<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view_controller.household.HouseholdDeleteView"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="50.0"
              AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">

            <Label text="Xóa hộ khẩu theo Số hộ khẩu" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Số hộ khẩu:"/>
                <TextField fx:id="tfHouseholdNumber" promptText="Nhập số hộ khẩu"/>
            </HBox>

            <Button text="Xóa" fx:id="btnDelete" onAction="#onDelete" maxWidth="100"/>

        </VBox>
    </children>

</AnchorPane>
