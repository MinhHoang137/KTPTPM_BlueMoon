<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.user.HomePageController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #2C3E50;">

    <!-- VBox để căn giữa các nút và có khoảng cách hợp lý -->
    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="100" AnchorPane.leftAnchor="350" AnchorPane.rightAnchor="350">

        <!-- Tiêu đề -->
        <Label text="Trang chính quản lý"
               style="-fx-font-size: 22px; -fx-text-fill: #ECF0F1; -fx-font-weight: bold;" />

        <!-- Các nút quản lý -->
        <Button text="Khoản thu"
                onAction="#onFeeClicked"
                prefWidth="260" prefHeight="50"
                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;
                       -fx-background-radius: 10;" />

        <Button text="Báo cáo"
                onAction="#onReportClicked"
                prefWidth="260" prefHeight="50"
                style="-fx-background-color: #1ABC9C; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;
                       -fx-background-radius: 10;" />

        <Button text="Dân cư"
                onAction="#onResidentClicked"
                prefWidth="260" prefHeight="50"
                style="-fx-background-color: #9B59B6; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;
                       -fx-background-radius: 10;" />

        <Button text="Hộ khẩu"
                onAction="#onHouseHoldClicked"
                prefWidth="260" prefHeight="50"
                style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;
                       -fx-background-radius: 10;" />

        <Button text="Xe cộ"
                onAction="#onVehicleClicked"
                prefWidth="260" prefHeight="50"
                style="-fx-background-color: #F1C40F; -fx-text-fill: black; -fx-font-size: 15px; -fx-font-weight: bold;
                       -fx-background-radius: 10;" />

        <Button text="Tạm trú / Tạm vắng"
                onAction="#onTemporaryClicked"
                prefWidth="260" prefHeight="50"
                style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;
                       -fx-background-radius: 10;" />

        <!-- Nút Đăng xuất -->
        <Button text="Đăng xuất"
                onAction="#onLogoutClicked"
                prefWidth="260" prefHeight="45"
                style="-fx-background-color: #95A5A6; -fx-text-fill: black; -fx-font-size: 14px; -fx-font-weight: bold;
                       -fx-background-radius: 10;" />
    </VBox>

</AnchorPane>
