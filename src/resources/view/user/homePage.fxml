<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.user.HomePageController"
            prefWidth="1000.0" prefHeight="700.0" style="-fx-background-color: #f0f2f5;">

    <!-- Vùng LEFT: Sidebar chứa các nút chức năng -->
    <left>
        <VBox alignment="TOP_CENTER" spacing="15" prefWidth="250.0" style="-fx-background-color: #34495e;">
            <padding>
                <Insets top="30" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Menu Chính" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ecf0f1; -fx-padding: 0 0 20 0;"/>
            
            <Button fx:id="btnFee" text="Quản lý Phí" prefWidth="200.0" prefHeight="50.0"
                    style="-fx-font-size: 16px; -fx-background-color: #2c3e50; -fx-text-fill: white; -fx-border-color: #ecf0f1; -fx-border-radius: 5; -fx-background-radius: 5;"
                    onAction="#onFeeClicked"/>
            <Button fx:id="btnReport" text="Báo cáo" prefWidth="200.0" prefHeight="50.0"
                    style="-fx-font-size: 16px; -fx-background-color: #2c3e50; -fx-text-fill: white; -fx-border-color: #ecf0f1; -fx-border-radius: 5; -fx-background-radius: 5;"
                    onAction="#onReportClicked"/>
            <!-- Dòng 25 bị lỗi đã được sửa -->
            <Button fx:id="btnHouseholdPerson" text="Hộ khẩu \ Nhân khẩu" prefWidth="200.0" prefHeight="50.0"
                    style="-fx-font-size: 16px; -fx-background-color: #2c3e50; -fx-text-fill: white; -fx-border-color: #ecf0f1; -fx-border-radius: 5; -fx-background-radius: 5;"
                    onAction="#onHouseholdPersonClicked"/>
            <Button fx:id="btnVehicle" text="Quản lý Phương tiện" prefWidth="200.0" prefHeight="50.0"
                    style="-fx-font-size: 16px; -fx-background-color: #2c3e50; -fx-text-fill: white; -fx-border-color: #ecf0f1; -fx-border-radius: 5; -fx-background-radius: 5;"
                    onAction="#onVehicleClicked"/>
            
            <Region VBox.vgrow="ALWAYS"/>

            <Button fx:id="btnLogout" text="Đăng xuất" prefWidth="200.0" prefHeight="50.0"
                    style="-fx-font-size: 16px; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-border-color: #ecf0f1; -fx-border-radius: 5; -fx-background-radius: 5;"
                    onAction="#onLogoutClicked"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Chào mừng đến với hệ thống quản lý chung cư" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #336699;"/>
        </StackPane>
    </center>

</BorderPane>