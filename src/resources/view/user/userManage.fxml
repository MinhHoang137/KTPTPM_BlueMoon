<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.user.UserManageController"
            prefWidth="400" prefHeight="250"
            style="-fx-background-color: #2C3E50;">

    <VBox alignment="CENTER" spacing="20" layoutX="100" layoutY="50" prefWidth="200">
        <Button fx:id="btnLogin" text="Đăng nhập"
                onAction="#handleLogin"
                prefWidth="160" prefHeight="45"
                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8;" />

        <Button fx:id="btnRegister" text="Đăng ký"
                onAction="#handleRegister"
                prefWidth="160" prefHeight="45"
                style="-fx-background-color: #1ABC9C; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8;" />
    </VBox>
</AnchorPane>
