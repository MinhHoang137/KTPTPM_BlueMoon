<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.user.UserManageController"
            prefWidth="1000.0" prefHeight="700.0">

    <VBox alignment="CENTER" spacing="40.0" AnchorPane.topAnchor="150.0"
          AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.bottomAnchor="150.0">

        <Label text="Quản lý Người dùng" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-padding: 0 0 20 0;"/>

        <Button fx:id="btnLogin" text="Đăng nhập" onAction="#handleLogin"
                prefWidth="300.0" prefHeight="70.0" style="-fx-font-size: 28px;"/>
        
        <Button fx:id="btnRegister" text="Đăng ký" onAction="#handleRegister"
                prefWidth="300.0" prefHeight="70.0" style="-fx-font-size: 28px;"/>
    
    </VBox>
</AnchorPane>