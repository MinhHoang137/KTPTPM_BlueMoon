<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.user.UserRegisterController"
      spacing="20" alignment="CENTER" prefWidth="1000.0" prefHeight="700.0">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Label text="Đăng ký người dùng mới" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>

    <GridPane hgap="20" vgap="20" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="200"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="300"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10" prefHeight="50" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10" prefHeight="50" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10" prefHeight="50" vgrow="SOMETIMES"/>
        </rowConstraints>

        <Label text="Tên đăng nhập:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 20px;"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefHeight="40" style="-fx-font-size: 18px;"/>

        <Label text="Mật khẩu:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 20px;"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefHeight="40" style="-fx-font-size: 18px;"/>

        <Label text="Vai trò:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 20px;"/>
        <ComboBox fx:id="roleField" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="300" prefHeight="40" style="-fx-font-size: 18px;"/>
    </GridPane>

    <Button text="Đăng ký" onAction="#onRegisterClicked" prefWidth="200" prefHeight="50" style="-fx-font-size: 22px;"/>
</VBox>