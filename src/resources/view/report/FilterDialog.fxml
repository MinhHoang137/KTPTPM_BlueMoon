<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="15" fx:controller="controller.report.FilterDialogController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <GridPane hgap="10" vgap="10">

        <Label text="Họ và tên:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtFullName" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>

        <Label text="Giới tính:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="choiceGender" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>

        <Label text="Khoản thu:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtKhoanThu" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="200"/>

        <Label text="Trạng thái khoản thu:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="choiceTrangThaiKhoanThu" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="200"/>

        <Label text="Trạng thái thanh toán:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="choiceTrangThaiThanhToan" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="200"/>

        <Label text="Ngày nộp từ:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateFrom" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="200"/>

        <Label text="Ngày nộp đến:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateTo" GridPane.rowIndex="6" GridPane.columnIndex="1" prefWidth="200"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Hủy" fx:id="btnCancel" minWidth="80"/>
        <Button text="Áp dụng lọc" fx:id="btnApply" minWidth="100"/>
    </HBox>

</VBox>
