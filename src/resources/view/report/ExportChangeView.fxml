<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.report.ExportReportController"
      spacing="10" padding="15">

    <TableView fx:id="tableReport" prefHeight="400" prefWidth="1000">
        <columns>
            <TableColumn fx:id="colFullName" text="Họ và tên" prefWidth="150"/>
            <TableColumn fx:id="colGender" text="Giới tính" prefWidth="100"/>
            <TableColumn fx:id="colIdentityNumber" text="CMND/CCCD" prefWidth="120"/>
            <TableColumn fx:id="colHouseholdId" text="Mã hộ khẩu" prefWidth="120"/>

            <TableColumn fx:id="colTenKhoanThu" text="Tên khoản thu" prefWidth="150"/>
            <TableColumn fx:id="colSoTien" text="Số tiền (VNĐ)" prefWidth="120"/>
            <TableColumn fx:id="colTrangThaiKhoanThu" text="Trạng thái khoản thu" prefWidth="150"/>

            <TableColumn fx:id="colSoTienNop" text="Số tiền nộp (VNĐ)" prefWidth="150"/>
            <TableColumn fx:id="colNgayNop" text="Ngày nộp" prefWidth="100"/>
            <TableColumn fx:id="colTrangThaiThanhToan" text="Trạng thái thanh toán" prefWidth="150"/>
        </columns>
    </TableView>

    <Button fx:id="btnSaveReport" text="Lưu báo cáo" maxWidth="200" style="-fx-alignment: center;"/>
</VBox>
