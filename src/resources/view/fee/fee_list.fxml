<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.fee.FeeListController"
            prefWidth="1000.0" prefHeight="700.0" style="-fx-background-color: #f9f9f9;">

    <!-- Title -->
    <VBox spacing="15" alignment="CENTER_LEFT"
          AnchorPane.topAnchor="20" AnchorPane.leftAnchor="30"
          AnchorPane.rightAnchor="30" AnchorPane.bottomAnchor="20">

        <Label text="Danh sách khoản thu"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               alignment="CENTER"/>

        <!-- TableView -->
        <TableView fx:id="tableFeeList" prefWidth="560.0" prefHeight="300.0">
            <!-- Thêm các cột cho TableView ở đây -->
        </TableView>

        <!-- Button Row -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <!-- Nút Thêm -->
            <Button layoutX="20.0" layoutY="340.0" mnemonicParsing="false"
                    onAction="#onAddClicked" text="Thêm mới"
                    style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16;"/>
            <!-- Nút Sửa -->
            <Button layoutX="120.0" layoutY="340.0" mnemonicParsing="false"
                    onAction="#onEditClicked" text="Sửa"
                    style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16;"/>
            <!-- Nút Xóa -->
            <Button layoutX="200.0" layoutY="340.0" mnemonicParsing="false" 
                    onAction="#onDeleteClicked" text="Xóa"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16;"/>
        </HBox>

        <!-- Nút Quay lại -->
        <HBox spacing="10" alignment="CENTER_RIGHT" AnchorPane.bottomAnchor="10">
            <Button layoutX="320.0" layoutY="420.0" text="Quay lại" onAction="#onBackClicked"
                    style="-fx-background-color: #9e9e9e; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16;"/>
        </HBox>
    </VBox>
</AnchorPane>
