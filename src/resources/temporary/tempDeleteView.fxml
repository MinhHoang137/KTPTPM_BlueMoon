<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view_controller.temporary.TempDeleteView"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #f9f9f9;">

    <VBox spacing="20" alignment="CENTER"
          AnchorPane.topAnchor="100" AnchorPane.leftAnchor="50"
          AnchorPane.rightAnchor="50">

        <Label text="Xóa Tạm Trú / Tạm Vắng"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Mã tạm trú/tạm vắng:"
                   style="-fx-font-size: 14px;"/>
            <TextField fx:id="recordIdField" promptText="Nhập mã"
                       HBox.hgrow="ALWAYS"
                       style="-fx-background-radius: 6; -fx-padding: 6;"/>
        </HBox>

        <Button fx:id="deleteButton" text="Xóa"
                onAction="#onDelete"
                style="-fx-background-color: #e53935; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 16;"/>
    </VBox>
</AnchorPane>
